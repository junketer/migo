<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/hotspot_list_label_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/airline_hotspot_name_label" >
            </TextView>

            <TextView
                style="@style/hotspot_list_value_item"
                android:id="@+id/airline_hotspot_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/hotspot_list_label_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotspot_delayed_label" >
            </TextView>

            <TextView
                style="@style/hotspot_list_value_item"
                android:id="@+id/airline_hotspot_delayed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/hotspot_list_label_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotspot_cancelled_label" >
            </TextView>

            <TextView
                style="@style/hotspot_list_value_item"
                android:id="@+id/airline_hotspot_cancelled_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TextView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/hotspot_list_label_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hotspot_total_label" >
            </TextView>

            <TextView
                style="@style/hotspot_list_value_item"
                android:id="@+id/airline_hotspot_total_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </TextView>
        </TableRow>
    </TableLayout>

</LinearLayout>