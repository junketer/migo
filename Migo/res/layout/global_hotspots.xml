<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ToggleButton 
	    android:id="@+id/hotspotToggle"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textOn="@string/airport_hotspot_name_label"
	    android:textOff="@string/airline_hotspot_name_label"
	    android:onClick="onHotspotToggleClicked"/>
		      
        <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/airport_hotspots_list">
        </ListView>    
        <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/airline_hotspots_list"
        android:visibility="invisible">
        </ListView>    
        

</LinearLayout>
